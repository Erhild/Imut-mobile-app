<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/babiesDetail"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:id="@+id/kosultasi_card"
                            app:cardElevation="5dp">
                            <LinearLayout
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_marginHorizontal="10dp">
                                <ImageView
                                    android:layout_height="match_parent"
                                    android:layout_width="64dp"
                                    android:src="@drawable/horse"/>
                                <RelativeLayout
                                    android:layout_height="match_parent"
                                    android:layout_width="160dp"
                                    android:layout_marginHorizontal="20dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Romin Anggara"
                                        android:textSize="12sp"
                                        android:textColor="#000"
                                        android:id="@+id/babiesName"
                                        android:layout_marginTop="20dp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Usia"
                                        android:textSize="12sp"
                                        android:textColor="#000"
                                        android:id="@+id/babiesAge"
                                        android:layout_below="@id/babiesName"/>
                                </RelativeLayout>
                                <ImageView
                                    android:layout_height="40dp"
                                    android:src="@drawable/menu"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center_vertical"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/babiesDetail"
                        android:layout_marginHorizontal="10dp"
                        android:id="@+id/babiesConditionHeader"
                        android:layout_marginTop="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:background="@color/colorPrimaryDark">
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:text="tinggi"
                                    android:textColor="#ffffff"
                                    android:textSize="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_marginHorizontal="35dp"/>
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:text="berat"
                                    android:textColor="#ffffff"
                                    android:textSize="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_marginHorizontal="35dp"/>
                                <TextView
                                    android:layout_height="wrap_content"
                                    android:text="kepala"
                                    android:textColor="#ffffff"
                                    android:textSize="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_marginHorizontal="35dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/babiesConditionBody"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_below="@id/babiesConditionHeader"
                        android:layout_marginHorizontal="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30 cm"
                                android:textSize="16dp"
                                android:layout_marginHorizontal="35dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3.0 Kg"
                                android:textSize="16dp"
                                android:layout_marginHorizontal="35dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="15 cm"
                                android:textSize="16dp"
                                android:layout_marginHorizontal="35dp"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:id="@+id/feature1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:layout_below="@id/babiesConditionBody">
                        <android.support.v7.widget.CardView
                            android:id="@+id/cardSchedule"
                            android:layout_width="166dp"
                            android:layout_height="100dp"
                            app:cardElevation="5dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:paddingHorizontal="10dp">
                                <ImageView
                                    android:id="@+id/iconScedule"
                                    android:layout_width="64dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="35dp"
                                    android:src="@drawable/ic_schedule"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Jadwal Imunisasi"
                                    android:layout_marginHorizontal="20dp"
                                    android:textSize="12sp"
                                    android:textColor="#000"
                                    android:layout_below="@id/iconScedule"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:id="@+id/cardReport"
                            android:layout_width="166dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="15dp"
                            app:cardElevation="5dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:paddingHorizontal="10dp">
                                <ImageView
                                    android:id="@+id/iconChart"
                                    android:layout_width="64dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="35dp"
                                    android:src="@drawable/diagram"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Laporan Pertumbuhan"
                                    android:layout_marginHorizontal="20dp"
                                    android:textSize="12sp"
                                    android:textColor="#000"
                                    android:layout_below="@id/iconChart"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/feature2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:layout_below="@id/feature1">
                        <android.support.v7.widget.CardView
                            android:id="@+id/cardReport2"
                            android:layout_width="166dp"
                            android:layout_height="100dp"
                            app:cardElevation="5dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:paddingHorizontal="10dp">
                                <ImageView
                                    android:id="@+id/iconReport"
                                    android:layout_width="54dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="35dp"
                                    android:src="@drawable/report"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Laporan Perkembangan"
                                    android:layout_marginHorizontal="20dp"
                                    android:textSize="12sp"
                                    android:textColor="#000"
                                    android:layout_below="@id/iconReport"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                        <android.support.v7.widget.CardView
                            android:id="@+id/cardSearchDoctor"
                            android:layout_width="166dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="15dp"
                            app:cardElevation="5dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:paddingHorizontal="10dp">
                                <ImageView
                                    android:id="@+id/iconDoctor"
                                    android:layout_width="64dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="35dp"
                                    android:src="@drawable/doctor"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Cari Dokter"
                                    android:layout_marginHorizontal="20dp"
                                    android:textSize="12sp"
                                    android:textColor="#000"
                                    android:layout_below="@id/iconDoctor"/>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/relativeL_home2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_below="@id/feature2">

                        <LinearLayout
                            android:id="@+id/listArticle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Artikel"
                                    android:textColor="#000"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/article"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:layout_below="@id/listArticle">
                        </android.support.v7.widget.RecyclerView>
                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
         </RelativeLayout>

        <FrameLayout
            android:id="@+id/mainFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomNavvigation"
            tools:ignore="InvalidId">
        </FrameLayout>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavvigation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            app:labelVisibilityMode="labeled"
            app:menu="@navigation/bottom_navigation"
            app:itemBackground="@color/colorPrimary"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
</RelativeLayout>